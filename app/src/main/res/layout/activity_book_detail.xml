<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/e8"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".BookDetail">

    <LinearLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/pop_medium"
            android:text="Book Shop"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/sneakerName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/raleway_bold"
        android:text="The Four Agreements"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:visibility="visible" />



    <ImageView
        android:id="@+id/sneakerImg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:src="@drawable/img_1" />
    <TextView
        android:id="@+id/sneakerPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pop_semibold"
        android:text="$ 9.07"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:visibility="visible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#707B81"
        android:fontFamily="@font/pop_regular"
        android:lineHeight="40dp"
        android:text="Rooted in traditional Toltec wisdom beliefs, four agreements in life are essential steps on the path to the personal freedom..."
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/addToFavBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="30dp"
            android:adjustViewBounds="true"
            android:background="@drawable/circle"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/fav_border" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addToCartBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/raleway_bold"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Add to Cart"
            android:textAllCaps="false"
            android:textSize="17sp"
            app:backgroundTint="@color/primaryColor"
            app:cornerRadius="15dp"
            app:iconGravity="textStart"
            app:iconPadding="20dp"
            app:iconSize="35dp" />

    </LinearLayout>

</LinearLayout>